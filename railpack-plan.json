{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "dependsOn": ["setup"],
                    "cmds": [
                        "composer install --no-interaction --prefer-dist --optimize-autoloader",
                        "npm install"
                    ]
                },
                "build": {
                    "dependsOn": ["install"],
                    "cmds": ["npm run build"]
                }
            },
            "start": {
                "cmd": "php artisan serve --host=0.0.0.0 --port=8080"
            }
        },
        "variables": {
            "NODE_VERSION": "20.14.0"
        }
    }
}
